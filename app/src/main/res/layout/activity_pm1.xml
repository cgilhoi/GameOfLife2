<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pm1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sluicegate.gameoflife2.PM1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules:\n
        1.  Hide all e-mails in your inbox\n
        2.  When you get an e-mail immediately reply with what you can\n
        3.  Answer the call on the first ring and try to solve the problem in real time\n
        4.  In meetings, be very wary of taking action items instead trying to solve the issue immediately."
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="161dp"
        android:src="@drawable/goln"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="8"
        android:id="@+id/textView4"
        android:textSize="66sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="65dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:id="@+id/imageView1"
        android:src="@drawable/golp"
        android:layout_marginLeft="100sp"

        android:layout_alignTop="@+id/imageView"
        />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="8"
        android:id="@+id/textView6"
        android:textSize="66sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="165dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="76sp"
        android:layout_height="76sp"
        android:id="@+id/imageView2"
        android:src="@drawable/gols"
        android:layout_marginLeft="200dp"

        android:layout_alignTop="@+id/imageView"
        />

    <TextView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="8"
        android:id="@+id/textView7"
        android:textSize="66sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="265dp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For further reading"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Summary:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <TextView
        android:text="What do these ratings mean?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/textView3"
        android:clickable="true"
        android:onClick="npsRedirect"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
